#!/bin/bash

set -euo pipefail
IFS=$'\n\t'

# Install tmux
if cat /etc/os-release | grep -q "ID=ubuntu"; then
	sudo apt install -y tmux
elif cat /etc/os-release | grep -q "ID=arch"; then
	sudo pacman -Syu tmux --noconfirm
fi

# Install tpm
repo="https://github.com/tmux-plugins/tpm"
dest="$HOME/.tmux/plugins/tpm"
git -C "$dest" pull || git clone "$repo" "$dest"
