general {
        output_format = "i3bar"
        colors = true
        markup = pango
        interval = 5
        color_good = '#00ff00'
		color_degraded = '#ffff00'
		color_bad = '#ff0000'
}

order += "load"
order += "memory"
order += "disk /"
order += "ethernet enp1s0"
order += "wireless wlp5s0"
order += "volume master"
order += "battery 1"
order += "tztime local"

load {
        format = "%5min CPU"
        max_threshold = "0.5"
}
memory {
        format = "%used/%total RAM"
}

disk "/" {
        format = "%avail/%total Disk"
        threshold_type = percentage_free
        low_threshold = 10
}

ethernet enp1s0 {
        format_up = "󰈁 %ip"
        format_down = "󰈁 Disconnected"
}

wireless wlp5s0 {
        format_up = "󰖩 %essid"
        format_down = "󰖩 Disconnected"
}

volume master {
        format = " %volume Volume"
        format_muted = " Muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 1 {
	last_full_capacity = true
        format = "%status %percentage"
        format_down = "No Battery"
        status_chr = "Charging"
        status_bat = "Battery"
        status_unk = "Unknown"
        status_full = "Charged"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
		format = "%time"
		format_time = "%a %b %-d %H:%M"
}
