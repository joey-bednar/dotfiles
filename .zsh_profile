export PATH="$HOME/.local/bin:$PATH"
bindkey -s ^f ". tmux-fzf\n"

os=$(uname)

# Linux only
if [[ $os == "Linux" ]]; then
    export PYTHONPATH="$HOME/personal/dsa"
    alias todo="nvim $HOME/work/todo.txt"

# Mac only
elif [[ $os == "Darwin" ]]; then
    alias todo="nvim $HOME/Documents/todo.txt"

    tmux
    cd $HOME/Code/digital-assistant
    conda activate digital-assistant
    export PYTHONPATH="$HOME/Code/gesture-recognition/src"
    clear
fi
