export PATH="$HOME/.local/bin:$PATH"
bindkey -s ^f ". tmux-fzf\n"

# disable <C-;> behavior
gsettings set org.freedesktop.ibus.panel.emoji hotkey "[]"

os=$(uname)

# Linux only
if [[ $os == "Linux" ]]; then
    export PYTHONPATH="$HOME/personal/dsa"
    alias todo="nvim -c \"e $HOME/work/todo.txt\" $HOME/work/todo/2023.txt"

    # export PATH="$HOME/idea-IC-232.10227.8/bin:$PATH"

# Mac only
elif [[ $os == "Darwin" ]]; then
    alias todo="nvim $HOME/Documents/todo.txt"

    tmux
    cd $HOME/Code/digital-assistant
    conda activate digital-assistant
    export PYTHONPATH="$HOME/Code/gesture-recognition/src"
    clear
fi
